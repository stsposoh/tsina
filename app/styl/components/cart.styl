@import "nib"
@import "vars"
@import "mixins"

.mini-cart
  margin: 0 -30px;
  @media (max-width: max-sm)
    margin: 0 -15px;
  &__title
    text-transform: uppercase;
    text-align: center;
    font-size: 23px;
    border-bottom: 1px solid rgba(0, 0, 0, .1)
    padding-bottom: 24px;
    @media (max-width: max-medium)
      font-size: 18px;
      padding-bottom: 15px;
    @media (max-width: max-sm)
      font-size: 14px;
    span
      color accent-red
  &__product
    position: relative;
    padding: 22px 0 6px;
    margin: 0 25px;
    border-bottom: 1px solid rgba(0,0,0,0.07);
    @media (max-width: max-medium)
      padding: 26px 0 6px;
    @media (max-width: max-sm)
      padding: 22px 0 0;
      margin: 0 15px;
    &-remove
      position: absolute;
      right: 0
      text-transform: uppercase;
      font-size: 11px;
      color: grey;
      top: 6px;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      transition color .3s ease-in-out
      &:hover
        color accent-red
      b
        font-size: 19px;
        margin-left: 2px;
    &-title
      color accent-red
      font-size: 18px;
      margin-bottom: 9px;
      display: inline-block;
      line-height 1
      @media (max-width: max-medium)
        font-size 16px
      @media (max-width: max-sm)
        font-size: 14px;
    &-main
      display: flex;
      flex-wrap: wrap;
    &-img
      width: 25%;
      padding-right: 18px;
      overflow: hidden;
      height: 57px;
      @media (max-width: max-sm)
        width: 22%;
        padding-right: 12px;
        height: 55px;
      img
        width: 100%;
    &-amount
      width: 40%;
      @media (max-width: max-sm)
        width: 35%;
    &-price
      width: 35%;
      padding-left: 20px;
      @media (max-width: max-sm)
        width: 43%;
        padding-left: 15px;
      .field__input
        border: none;
        font-weight: bold;
        font-size: 17px;
        @media (max-width: max-sm)
          font-size: 14px;
  &__total
    border-bottom: 1px solid rgba(0,0,0,0.07);
    margin: 0 25px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    font-size: 22px;
    font-weight: bold;
    padding: 15px 0;
    @media (max-width: max-sm)
      margin: 0 15px;
      font-size: 17px;
    &-sum
      color accent-red
  &__footer
    border-top: 1px solid rgba(0,0,0,0.2);
    background-color: #eaeaea;
    border-radius: 0 0 60px 10px;
    margin-bottom: -31px;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding: 15px 25px;
    @media (max-width: max-medium)
      justify-content: center;
      padding: 15px;
      flex-direction column
    &-back
      color accent-red
      cursor pointer
      font-size: 18px;
      transition color .3s ease-in-out
      @media (max-width: max-medium)
        font-size: 15px;
        margin-bottom: 10px;
      &:hover
        color accent-dark
