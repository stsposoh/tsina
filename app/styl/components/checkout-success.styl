@import "nib"
@import "vars"
@import "mixins"

.checkout-success
  padding-top 1px
  background: -webkit-linear-gradient(45deg, rgb(235, 235, 248) 22%, rgb(246, 246, 252), rgb(222, 244, 239));
  background: -moz-linear-gradient(45deg, rgb(235, 235, 248) 22%, rgb(246, 246, 252), rgb(222, 244, 239));
  background: linear-gradient(45deg, rgb(235, 235, 248) 22%, rgb(246, 246, 252), rgb(222, 244, 239));
  padding-bottom 30px
  &__title
    padding-top 39px
    font-size: 29px;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom 28px
    flex-wrap wrap
    @media (max-width: max-medium)
      padding-top 18px
      font-size: 25px;
      line-height: 1.5;
      justify-content: flex-start;
      padding-left: 53px;
      position: relative;
      margin-bottom: 19px;
    @media (max-width: 413px)
      padding-left: 46px;
      font-size: 19px;
    img
      margin-right 10px
      @media (max-width: max-medium)
        width: 31px;
        position: absolute;
        left: 11px;
        top: 19px;
      @media (max-width: 413px)
        width: 26px;
    span
      color accent-green
      display: inline-block;
      margin 0 11px
  &__tip
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    @media (max-width: max-medium)
      align-items: flex-start;
      padding-left: 22px;
    @media (max-width: 413px)
      padding-left: 16px;
    svg
      margin-right 18px
      flex-shrink 0
      @media (max-width: max-medium)
        width: 26px;
  &__reg
    margin 43px 0 47px
    padding 59px 50px 41px
    border-radius: 26px;
    border: 1px solid #e4d6ea
    filter: drop-shadow(0px 10px 30px rgba(106, 119, 255, 0.05));
    background: #E7F4F4;
    background: -webkit-radial-gradient(top left, #E7F4F4, #EFE7FA);
    background: -moz-radial-gradient(top left, #E7F4F4, #EFE7FA);
    background: radial-gradient(to bottom right, #E7F4F4, #EFE7FA);
    @media (max-width: max-medium)
      margin: 30px 0 20px;
      padding: 34px 17px 0
    &-title
      font-size: 24px;
      font-weight: bold;
      @media (max-width: max-medium)
        font-size: 17px;
        text-align: center;
    &-date
      position: relative;
      padding-left: 38px
      font-size: 16px;
      margin-top: 14px
      @media (max-width: max-medium)
        padding-left: 31px;
        font-size: 15px;
        margin-top: 22px
      &-icon
        position: absolute;
        left: -2px
      strong
        line-height: 1.7;
    &-cols
      display: flex;
      justify-content: space-between;
      margin-top: 28px
      flex-wrap wrap
      @media (max-width: max-medium)
        margin-top: 0;
    &-by-site
      width: 41%;
      padding: 36px 0;
      position relative
      @media (max-width: max-medium)
        width: 100%;
        padding: 19px 0;
        text-align center
    &-col-title
      font-size: 18px;
      margin-bottom 27px
      @media (max-width: max-large)
        font-size: 16px;
        margin-bottom: 25px;
      @media (max-width: max-medium)
        font-size: 16px;
        margin-bottom: 16px;
        text-align left
    &-arrow
      position absolute
      top: 16px
      right: 0;
      @media (max-width: max-medium)
        display none
    &-by-services
      border: 1px dashed rgba(0, 0, 0, 0.2);
      border-radius: 15px;
      text-align: center;
      width: 54%;
      padding 30px 47px
      @media (max-width: max-extra-large)
        padding: 30px 20px;
      @media (max-width: max-large)
        padding: 22px 15px;
      @media (max-width: max-medium)
        border: none;
        border-radius: 0;
        text-align: left;
        width: 100%;
        padding: 18px 0;
    &-btns
      display flex
      flex-wrap wrap
      justify-content space-between
      @media (max-width: max-medium)
        border: 1px dashed rgba(0,0,0,0.2);
        padding: 19px 14px;
        border-radius: 8px;
      @media (max-width: 413px)
        padding 19px 10px
  &__btn
    background-color accent-red
    display: inline-block;
    font-weight: bold;
    color: white;
    font-size: 18px;
    padding 17px 30px
    border-radius 30px
    transition all .3s ease-in-out
    @media (max-width: max-large)
      font-size: 15px;
      padding: 14px 23px;
    @media (max-width: max-medium)
      font-size: 16px;
      padding 17px 30px
    @media (max-width: 413px)
      font-size: 14px;
    &:hover
      color white
      box-shadow: 0 4px 8px rgba(215, 75, 72, 0.44);
      background-color #F5564A
  &__info
    background-color white
    box-shadow: 0px 10px 30px rgba(106, 119, 255, 0.05);
    border-radius: 26px;
    overflow hidden
    @media (max-width: max-medium)
      border-radius: 15px;
    &-cols
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      padding 0 45px 42px
      @media (max-width: max-medium)
        padding: 0 20px
      @media (max-width: 413px)
        padding: 0 10px
    &-col
      padding 38px 0 0
      @media (max-width: max-medium)
        padding: 25px 0 0;
      &:nth-of-type(1)
        width: 46%;
        @media (max-width: max-large)
          width: 100%;
      &:nth-of-type(2)
        width: 51%;
        @media (max-width: max-large)
          width: auto
          padding: 22px 0 13px
        @media (max-width: max-medium)
          margin: 0 -20px;
          background-color: #f5f7fd;
        @media (max-width: 413px)
          margin: 0 -10px;
        .checkout-success__info-title
          @media (max-width: max-medium)
            padding: 0 20px;
          @media (max-width: 413px)
            padding: 0 10px;
    &-title
      font-weight: bold;
      font-size: 23px;
      margin-left 9px
      margin-bottom 36px
      @media (max-width: max-medium)
        font-size: 18px;
        margin-left: 0;
        margin-bottom: 16px;
        padding: 0
  &__banner
    font-size 0
    line-height 0
    img
      width: 100%;
  &__product
    border: 1px dashed rgba(0, 0, 0, 0.2);
    border-radius: 15px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom 10px
    @media (max-width: max-medium)
      border: none;
    &-img
      width: 29%;
      text-align: right;
      padding 40px 10px 4px
      position: relative;
      @media (max-width: max-medium)
        padding: 30px 3px 4px;
        text-align: center;
      img
        width: 82%;
        font-size 0
        line-height 0
    &-brand
      width: 100%;
      height: 16px
      background-repeat: no-repeat;
      background-position: left center;
      background-size: contain;
      margin-bottom: 7px
      @media (max-width: max-medium)
        margin-bottom: 3px;
      &.\--toyo-tires
        background-image url("/img/common/card-brand-1.png")
    &-labels
      position: absolute;
      top: 17px
      left: 10px
      right: 0;
      text-align: left;
      @media (max-width: max-medium)
        top: 7px;
        left: -7px;
    &-label
      width: 24px
      height: 24px
      display: inline-block;
      background-repeat: no-repeat;
      background-position: center;
      -webkit-background-size: contain;
      -moz-background-size: contain;
      background-size: contain;
      margin-left: 4px
      @media (max-width: max-medium)
        width: 22px;
        height: 22px;
        margin-left: 6px;
      &.\--sun
        background-image: url(/img/svg/sun.svg);
    &-main
      width 67%
      padding 22px 15px 10px 0
      @media (max-width: max-medium)
        width: 70%;
        padding: 14px 0 10px;
      @media (max-width: 413px)
        padding: 7px 0
    &-title
      font-weight: bold;
      font-size: 16px;
      color: #231D4F;
      margin-bottom: 17px
      display: inline-block;
      @media (max-width: max-medium)
        font-size: 14px;
        margin-bottom: 19px;
      @media (max-width: 413px)
        font-size: 13px;
        margin-bottom: 11px;
    &-table
      display: flex;
      &-col
        margin-right 13px
        @media (max-width: max-extra-large)
          margin-right 10px
        @media (max-width: max-large)
          margin-right 10px
        @media (max-width: 413px)
          margin-right 9px
        &.\--price
          color #EF4046
          margin-right 0
          .checkout-success__product-table-content
            background-color #FFF7F5
            @media (max-width: 413px)
              background-color transparent
      &-header
        color: #848199;
        font-size: 14px;
        margin-bottom: 7px
        @media (max-width: max-extra-large)
          font-size 12px
        @media (max-width: max-large)
          font-size: 11px;
      &-content
        background-color #F5F7FD
        border-radius: 5px;
        padding 13px 14px
        font-size 12px
        @media (max-width: max-extra-large)
          padding 10px
          font-size 11px
        @media (max-width: max-large)
          padding: 9px;
        @media (max-width: 413px)
          padding: 0
          font-size 10px
          background-color transparent
        b
          font-size: 17px;
          @media (max-width: max-extra-large)
            font-size: 16px;
          @media (max-width: 413px)
            font-size: 14px;
  &__order-info
    background: linear-gradient(94.7deg, #F5F7FD 1.49%, rgba(245, 247, 253, 0) 182.58%);
    border-radius: 20px;
    padding-bottom 12px
    &-item
      border-bottom: 1px dashed rgba(165, 177, 212, 0.4);
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      padding 24px 22px
      @media (max-width: max-extra-large)
        padding 15px
      @media (max-width: max-large)
        padding: 12px 17px 19px;
      @media (max-width: 413px)
        padding: 12px 10px 19px;
      &.\--address
        border-bottom none
        align-items: flex-start;
        .checkout-success__order-info-label
          width: 89%;
          @media (max-width: max-medium)
            width: calc(100% - 40px);
            margin-top: 6px;
        .checkout-success__order-info-text
          width: 100%;
          padding-left: 48px
          @media (max-width: max-medium)
            padding-left: 38px;
            line-height: 1.5;
    &-icon
      margin-right 16px
      @media (max-width: max-extra-large)
        margin-right 10px
      @media (max-width: max-large)
        margin-right 9px
    &-label
      color: #848199;
      width: 22%;
      @media (max-width: max-medium)
        width: calc(100% - 40px);
    &-text
      width: 34%;
      @media (max-width: max-medium)
        width: 52%;
        padding-left: 38px;
        font-size: 14px;
    &-arrow
      width: 8%;
      height: 5px
      background-image url("/img/svg/arrow-2.svg")
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      @media (max-width: max-medium)
        width: 10%;
    &-text-red
      color: #EC1C24;
      width: 26%;
      padding-left 33px
      font-size: 16px;
      font-weight: bold;
      @media (max-width: max-extra-large)
        width: 25%;
        padding-left 10px
      @media (max-width: max-large)
        width: 23%;
        padding-left: 35px;
      @media (max-width: max-medium)
        width: 38%;
        padding-left: 16px;
        font-size: 16px;


.bot-btn
  font-weight: bold;
  border-radius: 30px
  display: inline-flex;
  align-items: center;
  padding: 16px 30px
  font-size: 18px;
  color white
  transition background-color .3s ease-in-out
  @media (max-width: max-large)
    padding: 12px 15px;
    font-size: 13px;
  @media (max-width: max-medium)
    padding: 18px 18px;
    font-size: 16px;
  @media (max-width: 413px)
    padding: 10px 12px;
    font-size: 11px;
  &.\--viber
    background-color: #722D91;
    &:hover
      background-color #640091
      color: white;
      text-decoration none
  &.\--telegram
    background-color #039BE5
    &:hover
      background-color #0580bb
      color: white;
      text-decoration none
  &__icon
    font-size: 0;
    line-height: 0;
    margin-right: 10px
    svg
      @media (max-width: max-medium)
        width 17px
        height auto











