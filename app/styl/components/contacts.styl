@import "nib"
@import "vars"
@import "mixins"

.contacts
  padding-top 13px
  background: linear-gradient(180deg, rgba(245, 245, 250, 0) 3.73%, #F5F5FA 81.66%, #F5F5FA 160.2%);
  &__header
    margin-top 33px
    margin-bottom 32px
    @media (max-width: max-medium)
      margin-top 9px
      margin-bottom 12px
  &__info
    margin-top 33px
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    @media (max-width: max-medium)
      margin-top 23px
    &-phones
      background-color white
      width: 66%;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      position relative
      margin-bottom 30px
      box-shadow: 0px 10px 40px rgba(38, 45, 118, 0.08);
      border-radius: 20px;
      @media (max-width: max-medium)
        width: 100%
      @media (max-width: 414px)
        margin-bottom 20px
      &-main
        position: relative;
        z-index: 2;
        width: 51%;
        padding 37px 0 47px 41px
        @media (max-width: max-extra-large)
          width: 58%;
        @media (max-width: max-large)
          width: 84%;
          padding: 30px 31px 26px
        @media (max-width: max-medium)
          width: 100%;
        @media (max-width: 414px)
          padding 20px 15px
      .contacts__title
        @media (max-width: max-medium)
          margin-bottom: 31px
    &-img
      position: absolute;
      z-index 1
      right: 0;
      top: 0;
      bottom: 0;
      width: 52%;
      font-size: 0;
      line-height: 0;
      background: rgb(254,253,255);
      background: linear-gradient(90deg, rgba(254,253,255,1) 0%, rgba(240,227,247,1) 46%, rgba(244,227,225,1) 75%, rgba(253,243,228,1) 100%);
      display: flex;
      align-items: flex-start;
      justify-content: flex-end;
      padding-top: 25px
      padding-right: 36px
      @media (max-width: max-large)
        width 100%
        padding-right: 19px
      img
        width: 211px
        @media (max-width: max-large)
          width: 124px
        @media (max-width: 414px)
          width: 85px;
    &-email
      background-color white
      box-shadow: 0px 10px 40px rgba(38, 45, 118, 0.08);
      border-radius: 20px;
      margin-bottom 30px
      width: 31%;
      padding: 37px 30px 45px
      display: flex;
      flex-wrap: wrap;
      flex-direction: column;
      justify-content: space-between;
      @media (max-width: max-medium)
        margin-right 0
        width 100%
        padding 15px 26px 19px
      @media (max-width: 414px)
        padding 15px 15px 19px
        margin-bottom 20px
  &__title
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 44px
    line-height: 1.3;
    @media (max-width: max-large)
      font-size 19px
      margin-bottom 20px
    @media (max-width: max-medium)
      font-size: 18px;
      margin-bottom 15px
  &__main-phone
    margin-bottom 22px
    @media (max-width: max-medium)
      margin-bottom 16px
    .contacts__phone-label
      font-weight: bold;
      @media (max-width: max-medium)
        font-size 18px
    .contacts__phone-icon
      @media (max-width: max-medium)
        margin-right 16px
  &__phone
    display: flex;
    align-items: center;
    flex-wrap wrap
    @media (max-width: max-medium)
      margin-right 15px
    @media (max-width: 414px)
      margin-right 6px
    &:last-of-type
      @media (max-width: max-medium)
        margin-right 0
    &-icon
      margin-right: 14px
      font-size: 0;
      line-height: 0;
      @media (max-width: max-medium)
        margin-right 7px
      svg
        @media (max-width: max-medium)
          width 20px
          height auto
    &-label
      font-size 16px
      margin-right 6px
      @media (max-width: 414px)
        font-size 13px
        margin-right 0
    &-tip
      color: #768592;
      font-size: 12px;
      @media (max-width: max-medium)
        width: 100%;
        margin-top: 8px
  &__phones
    display: flex;
    align-items: center;
    justify-content: space-between;
    @media (max-width: max-medium)
      justify-content flex-start
  &__email
    display: flex;
    align-items: center;
    margin-left 8px
    @media (max-width: max-medium)
      margin-left 0
    &-icon
      margin-right: 24px
      font-size: 0;
      line-height: 0;
      @media (max-width: max-large)
        margin-right 10px
      @media (max-width: max-medium)
        margin-right 13px
      svg
        @media (max-width: max-medium)
          width: 20px
          height: auto;
    &-label
      font-size 16px
      margin-right 6px
      text-decoration underline
  &__centers
    box-shadow: 0px 10px 40px rgba(38, 45, 118, 0.08);
    border-radius: 20px;
    margin-bottom 36px
    padding 30px 39px 0
    background-color white
    @media (max-width: max-medium)
      padding 19px 24px 0
      margin-bottom 28px
    @media (max-width: 414px)
      padding 19px 20px 0
      margin-bottom 20px
    &-list
      normalize_list()
      margin 0 -5px
      &-item
        display inline-block
        @media (max-width: max-medium)
          width calc(100% / 3 - 3px)
    &-footer
      position relative
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      margin-top 46px
      padding 29px 12px 32px
      @media (max-width: max-large)
        margin-top 27px
        padding 29px 8px 32px
      @media (max-width: max-medium)
        margin-top 20px
        padding 21px 0 36px
        justify-content: space-between;
      @media (max-width: 414px)
        margin-bottom 24px
      &:before
        content ''
        border: 1px dashed rgba(0, 0, 0, 0.2);
        left -39px
        right -39px
        position: absolute;
        height: 0;
        top 0
        @media (max-width: max-medium)
          left -24px
          right -24px
        @media (max-width: 414px)
          left -20px
          right -20px
      &-label
        font-weight bold
        font-size 20px
        margin-right 44px
        @media (max-width: max-large)
          font-size 17px
          margin-right 25px
        @media (max-width: max-medium)
          margin 0 0 15px
          width 100%
          text-align center
          font-size 16px
      &-btn
        font-weight: bold;
        border-radius: 30px
        display: inline-flex;
        align-items: center;
        padding: 16px 30px
        font-size: 18px;
        margin-right 25px
        color white
        transition background-color .3s ease-in-out
        @media (max-width: max-large)
          padding 13px 21px
        @media (max-width: max-medium)
          padding 18px 26px
          font-size 14px
          margin-right 0
        @media (max-width: 414px)
          padding 12px 13px
          font-size 12px
        &.\--viber
          background-color: #722D91;
          &:hover
            background-color #640091
            color: white;
            text-decoration none
        &.\--telegram
          background-color #039BE5
          &:hover
            background-color #0580bb
            color: white;
            text-decoration none
        &-icon
          font-size: 0;
          line-height: 0;
          margin-right: 10px
          svg
            @media (max-width: max-medium)
              width 17px
              height auto
    .contacts__title
      @media (max-width: max-medium)
        text-align center
  &__center
    background: rgba(119, 163, 252, 0.1037);
    border-radius: 13px;
    font-size: 16px;
    display: flex;
    align-items: center;
    padding 15px
    margin 0 5px 5px
    @media (max-width: max-medium)
      flex-direction: column;
      padding 9px 15px 13px
    @media (max-width: 414px)
      font-size: 13px;
      margin 4px
    &-icon
      margin-right 10px
      font-size: 0;
      line-height: 0;
      @media (max-width: max-medium)
        margin-right 0
        margin-bottom 5px
      svg
        @media (max-width: max-medium)
          width 16px
          height auto
  &__cards
    display flex
    flex-wrap wrap
    justify-content space-between
  &__card-schedule
    box-shadow: 0px 10px 40px rgba(38, 45, 118, 0.08);
    border-radius: 20px;
    margin-bottom 30px
    background-color white
    width: 48%;
    overflow hidden
    @media (max-width: max-medium)
      width: 100%;
      text-align: center;
    @media (max-width: 414px)
      margin-bottom 20px
    .contacts__title
      padding 34px 37px 0
      @media (max-width: max-medium)
        padding-top 26px
      @media (max-width: 414px)
        padding 26px 20px 0
    &-info
      padding 6px 37px 50px
      display: flex;
      flex-wrap: wrap;
      @media (max-width: max-large)
        padding-bottom 23px
      @media (max-width: max-medium)
        text-align: left;
        padding 13px 29px 27px
      @media (max-width: 414px)
        padding 10px 20px 25px
    &-icon
      width: 13%;
      font-size: 0;
      line-height: 0;
      @media (max-width: max-large)
        width 19%
      @media (max-width: max-medium)
        text-align: left;
        width 41px
      svg
        @media (max-width: max-medium)
          width 31px
          height auto
    &-text
      width: 87%;
      font-size: 16px;
      line-height: 1.5;
      @media (max-width: max-large)
        width 81%
        font-size 15px
      @media (max-width: max-medium)
        width calc(100% - 42px)
        font-size 14px
        line-height 1.3
    &-footer
      background-color: #FBF4F8;
      padding: 21px 42px 33px
      display: flex;
      flex-wrap: wrap;
      @media (max-width: max-medium)
        text-align: left;
        display: block;
        padding 21px 28px 24px
      @media (max-width: 414px)
        padding 20px
      strong
        width: 25%;
        font-size: 15px;
        @media (max-width: max-large)
          width: auto;
          font-size: 14px;
          margin-right: 9px
      span
        width: 75%;
        font-size: 15px;
        @media (max-width: max-large)
          width: auto;
          font-size: 14px;
  &__card-legal-info
    box-shadow: 0px 10px 40px rgba(38, 45, 118, 0.08);
    border-radius: 20px;
    margin-bottom 30px
    background-color white
    width: 48%;
    overflow hidden
    padding 38px 40px 0
    @media (max-width: max-medium)
      padding 25px 25px 11px
      width 100%
    @media (max-width: 414px)
      padding 23px 20px 5px
    .contacts__title
      margin-bottom 34px
      @media (max-width: max-large)
        margin-bottom 21px
      @media (max-width: max-medium)
        text-align: center;
      @media (max-width: 414px)
        margin-bottom 15px
    &-title
      font-weight: bold;
      font-size: 15px;
      color: #535063;
      margin-bottom: 11px
      @media (max-width: max-large)
        margin-bottom: 6px
      @media (max-width: max-medium)
        margin-bottom 1px
    &-text
      font-size: 16px;
      line-height: 1.5;
      margin-bottom 20px
      @media (max-width: max-large)
        font-size 15px
        margin-bottom 20px
      @media (max-width: max-medium)
        font-size 14px











