.modal-list
  font-weight: 600;
  text-transform uppercase
  letter-spacing: 0.04em;
  position relative
  display inline-flex
  margin-right: 4px;
  @media (max-width: max-medium)
    font-size: 12px;
  &:hover
    .modal-list__modal
      opacity: 1;
      pointer-events all
  &:after
    content '\f107'
    font-family: "fontello";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: 20px;
    font-weight: 600;
    color accent-red
    margin-left: 11px;
    @media (max-width: max-medium)
      font-size: 11px;
      margin-left: 5px;
  &__selected
    color accent-red
    display: flex;
    align-items: center;
  &__modal
    opacity 0
    pointer-events none
    position: absolute;
    box-shadow: 0px 24px 32px rgba(8, 35, 48, 0.24);
    border-radius: 0px 0px 25px 2px;
    background-color: white;
    z-index: 1;
    font-weight: bold;
    padding: 5px 0;
    top: -7px
    margin: 0 -10px;
    overflow hidden
    transition opacity .3s ease-in-out
    &-item
      padding: 4px 10px;
      cursor pointer
      white-space: nowrap;
      text-transform uppercase
      text-decoration none
      display: flex;
      align-items: center;
      font-size: 14.5px;
      line-height: 130%;
      transition color .3s, background-color .3s ease-in-out
      @media (max-width: max-medium)
        font-size: 11.5px;
        line-height: 120%;
      &.\--active
        background-color #768592
        color white !important
        &:after
          content '\e806'
          font-size: 13px;
          font-weight: 300;
          margin-left: 9px;
          font-family: "fontello";
          -webkit-font-smoothing: antialiased;
          -moz-osx-font-smoothing: grayscale;
      &:hover
        color accent-red

.phone-modal
  display: flex;
  //flex-wrap: wrap;
  align-items: flex-start;
  cursor pointer
  &.\--large
    .phone-modal__icon
      width: 36px;
      margin-top: 10px;
      @media (max-width: max-large)
        width: 26px;
        padding-right: 5px;
      @media (max-width: max-medium)
        padding: 0;
    .phone-modal__main
      width: calc(100% - 36px);
      @media (max-width: max-medium)
        width 100%
      &-phone
        margin-right: 0;
        margin-top: 3px;
        font-size: 25.5px;
        line-height: 110%;
        font-weight: 600;
        color accent-red
        letter-spacing: 0.04em;
        @media (max-width: max-large)
          font-size: 21.25px;
        @media (max-width: max-medium)
          font-size: 16.75px;
          margin-right: 14px
    .phone-modal__tip
      transform: translateY(-8px);
      margin-left 0
      @media (max-width: max-large)
        font-size: 11px;
      @media (max-width: max-medium)
        transform: translateY(2px);
  &:hover
    .phone-modal__modal
      overflow visible
      opacity 1
      pointer-events all
      transform: translateY(0);
  &__icon
    padding-right: 12px;
    display: inline-block;
    width: 32px;
    margin-top: 1px;
    @media (max-width: max-large)
      width: 48px;
      margin-top: 11px;
    @media (max-width: max-medium)
      padding: 0;
      width: 100%;
      text-align: center;
    svg
      width 100%
  &__main
    position: relative;
    z-index 1
    @media (max-width: max-medium)
      display none
    &-phone
      font-weight: 600;
      font-size: 20.25px;
      line-height: 150%;
      letter-spacing: 0.04em;
      transform: translateY(-5px);
      color accent-red
      display inline-block
      position relative
      z-index 2
      @media (max-width: max-medium)
        font-size: 16.75px;
        line-height: 111%;
        transform: translateY(4px);
      &:after
        content '\f107'
        font-family: "fontello";
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        font-size: 20px;
        font-weight: 600;
        color accent-red
        position: absolute;
        right: -23px;
        top: 0;
        @media (max-width: max-large)
          right: -20px;
          top: 0
        @media (max-width: max-medium)
          font-size: 14px;
          right: -14px;
  &__tip
    font-size: 11.75px;
    line-height: 135%;
    letter-spacing: 0.04em;
    display: inline-block;
    position: relative;
    z-index: 2;
    color: #768592;
    transform: translateY(-7px);
    margin-left: 39px;
    @media (max-width: max-large)
      margin-left: 0
    @media (max-width: max-medium)
      line-height: 120%;
      transform: translateY(4px);
  &__modal
    overflow hidden
    opacity 0
    pointer-events none
    display: block;
    padding: 10px 25px 24px 29px;
    position: absolute;
    z-index: 1;
    top: -9px;
    left: -28px;
    width: 269px;
    border-radius: 60px 10px;
    background-color: #fff;
    transform: translateY(45px);
    box-shadow: 0px 24px 32px rgba(8,35,48,0.24);
    transition opacity .3s, transform .3s ease-in-out
    @media (max-width: max-medium)
      top: 0
      left: -16px;
      width: 220px;
      border-radius: 40px 5px;
      padding: 5px 20px 24px;
    @media (max-width: max-sm)
      left: -97px;
    &-item
      display: flex;
      align-items: center;
      flex-wrap wrap
      font-size: 16px;
      line-height: 150%;
      letter-spacing: 0.02em;
      margin-bottom: 11px;
      margin-left: 32px;
      @media (max-width: max-medium)
        font-size: 14px;
        line-height: 130%;
        margin-bottom: 9px;
        margin-left: 14px
    &-icon
      margin-right: 6px;
      font-size: 0;
      line-height: 0;
      @media (max-width: max-medium)
        margin-right: 3px;
    &-tip
      display block
      width 100%
      font-size: 12px;
      line-height: 150%;
      letter-spacing: 0.02em;
      color: #768592;
      white-space nowrap
      @media (max-width: max-large)
        font-size 11px
    &-tel
      color: #0C0033;
    &-link
      font-weight: 600;
      color: accent-blue
    &-btn
      display: block;
      padding: 7px 0 0;
    .phone-modal__icon
      margin-top: 17px;
      width: 32px;
      padding-right: 9px;
      @media (max-width: max-medium)
        display inline-block !important
        margin-top: 11px;
        margin-left: 4px;
        padding-right: 5px;
        width: 25px !important;
    .phone-modal__main-phone
      font-size: 24.5px !important
      transform: translateY(-2px);
      @media (max-width: max-medium)
        font-size: 20px !important
        line-height: 120% !important
        margin-right: 0 !important
      &:after
        display none
    .phone-modal__tip
      margin-left: 40px !important
      white-space nowrap
      transform: translateY(-13px);
      @media (max-width: max-large)
        margin-left: 33px !important;
      @media (max-width: max-medium)
        margin-left: 6px !important
        transform: translateY(-3px);
        margin-bottom: 10px;


