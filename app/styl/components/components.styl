@import "nib"
@import "vars"
@import "mixins"

.subtitle
  font-size: 16px;
  line-height: 150%;
  letter-spacing: 0.02em;
  @media (max-width: max-extra-large)
    font-size: 15px;
  @media (max-width: max-medium)
    font-size: 14px;
    line-height: 130%;

.caption
  font-size: 12.75px;
  line-height: 150%;
  letter-spacing: 0.08em
  @media (max-width: max-extra-large)
    font-size: 12.5px;
    letter-spacing: 0.04em;
    line-height: 135%;
  @media (max-width: max-medium)
    font-size: 12px;
    line-height: 130%;
    letter-spacing: 0.02em;
  &.\--bold
    font-weight: 600;
    font-size: 11.75px;
    line-height: 135%;
    letter-spacing: 0.04em;
    @media (max-width: max-extra-large)
      font-size: 11.54px;
      line-height: 130%;
      letter-spacing: 0.02em;
    @media (max-width: max-medium)
      font-size: 11px;
      line-height: 115%;
      letter-spacing: 0.04em;

.label-1
  font-weight: bold;
  font-size: 14.5px;
  line-height: 130%;
  text-transform: uppercase;
  @media (max-width: max-extra-large)
    font-size: 14px;
  @media (max-width: max-medium)
    font-size: 13.5px;

.label-2
  font-weight: bold;
  font-size: 12.75px;
  line-height: 115%;
  letter-spacing: 0.02em;
  text-transform: uppercase;
  @media (max-width: max-extra-large)
    font-size: 12.5px;
    line-height: 130%;
  @media (max-width: max-medium)
    font-size: 12px;

.btn
  padding: 0 13px;
  display: inline-flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  border-radius: 25px 25px 25px 3px;
  background-color: transparent;
  border: none;
  outline: 0;
  letter-spacing: 0.02em;
  min-width: 120px;
  height: 48px;
  position relative
  cursor pointer
  -webkit-appearance: none;
  text-decoration none
  font-weight: bold;
  font-size: 14.5px;
  line-height: 130%;
  text-transform uppercase
  transition all .3s ease-in-out
  @media (max-width: max-medium)
    height: 41px;
  &.\--icon
    min-width: 55px;
    @media (max-width: max-sm)
      min-width: 0;
  &.\--style-2
    border-radius: 0 25px 5px 0;
    padding: 0 30px;
  &.\--middle
    height: 40px;
    @media (max-width: max-medium)
      font-size: 13.5px;
      line-height: 130%;
  &.\--small
    height 22px
    font-size: 11.75px;
    line-height: 135%;
    letter-spacing: 0.04em;
    border-radius: 10px 10px 10px 2px;
    text-transform initial
    min-width 80px
    @media (max-width: max-medium)
      font-size: 11.54px;
      line-height: 130%;
      letter-spacing: 0.02em;
  &.\--full-width
    width 100%
  &.\--wide
    padding: 0 40px;
  &.\--red
    background-color accent-red
    color white
    box-shadow: 0 2px 4px rgba(8, 35, 48, 0.24);
    &:hover
      box-shadow: 0 4px 8px rgba(215, 75, 72, 0.44);
      background-color #F5564A
    &:active
      background-color #D74B48
    svg
      fill white
    &.--disabled
      background-color #DFE2E9
  &.\--red-transparent
    background-color transparent
    color accent-red
    border: 1.5px solid accent-red
    &:hover
      color #F5564A
      border-color #F5564A
    &:active
      color #D74B48
      border-color #D74B48
    &.--disabled
      border-color #DFE2E9
  &.\--white
    background-color white
    color accent-dark
    border: 1px solid #dfe2e9;
    border-bottom: none;
    box-shadow: 0 2px 4px rgba(8, 35, 48, 0.24);
    svg
      fill accent-dark
    &:hover
      color #566069
      box-shadow: 0 4px 8px rgba(8, 35, 48, 0.24);
      svg
        fill #566069
    &:active
      color accent-dark
      box-shadow none
    &.--disabled
      background-color #DFE2E9
  &.\--black
    background-color white
    color #0C0033
    border 1px solid #0C0033
    &:hover
      color #F5564A
      border-color #F5564A
    &:active
      color #D74B48
      border-color #D74B48
  &.\--disabled
    background-color transparent
    pointer-events none
    box-shadow none
    color #C9CFDA
    svg
      fill #C9CFDA
  &.\--circle,
  &.\--circle-white
    width: 48px;
    min-width: 48px;
    border-radius: 50%;
    font-size: 18px;
    border: 1px solid transparent
  &.\--circle
    //
  &.\--circle-white
    color accent-red
    background-color white
    border-bottom: none;
    box-shadow: 0px 4px 8px rgba(215, 75, 72, 0.44);
    &:hover
      box-shadow: 0px 16px 24px rgba(215, 75, 72, 0.24);
      color #F5564A
    &:active
      color #D74B48
      border-color #dfe2e9;
      box-shadow none
  &.\--arrow-white,
  &.\--arrow-black
    width 40px
    min-width 40px
    height 38px
    font-size: 22px;
    background: rgba(255, 255, 255, 0.3);
    &:hover
      box-shadow: 0px 4px 8px rgba(8, 35, 48, 0.24);
  &.\--arrow-white
    color white
    border: 1.5px solid #FFFEFE;
  &.\--arrow-black
    box-shadow: 0px 2px 4px rgba(8, 35, 48, 0.24);
    color: accent-dark;
  &.\--arrow-left
    border-radius: 25px 25px 3px 25px;
  &.\--arrow-right
    border-radius: 25px 25px 25px 3px;
  &.\--simple
    padding 0
    min-width 0
    color accent-red
    font-size: 12px;
    svg
      fill accent-red
  &__counter
    position absolute
    background-color accent-red
    color white
    box-shadow: 0px 4px 8px rgba(215, 75, 72, 0.44);
    border-radius: 10px 10px 10px 2px;
    font-weight: 600;
    font-size: 11.75px;
    line-height: 135%;
    letter-spacing: 0.02em;
    right: -9px;
    top: -7px;
    padding: 3px 6px;
    @media (max-width: max-sm)
      right: -4px;
      top: 2px;
      font-size: 11px;
      line-height: 115%;
  svg
    margin-right: 4px;

