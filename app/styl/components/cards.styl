@import "nib"
@import "vars"
@import "mixins"

.action-card
  display flex !important
  flex-wrap wrap
  width: 540px !important;
  margin: 0 10px 10px
  background-color white
  box-shadow: 0px 4px 8px rgba(8, 35, 48, 0.24);
  border-radius: 60px 10px;
  font-size: 12.75px;
  line-height: 150%;
  letter-spacing: 0.04em;
  @media (max-width: max-extra-large)
    width: 483px !important;
    font-size: 12.5px;
    line-height: 135%;
  @media (max-width: max-medium)
    width: 230px !important
    font-size: 12px;
    line-height: 130%;
    letter-spacing: 0.02em;
    flex-direction: column;
  &__img
    width: 45%;
    padding: 14px 6px 13px 17px;
    position: relative;
    @media (max-width: max-extra-large)
      height: 153px;
      padding: 8px 7px 10px 9px;
    @media (max-width: max-medium)
      width: 100%;
      padding: 11px 10px 6px 10px;
      height: 158px;
    img
      border-radius: 50px 5px 30px;
      overflow: hidden;
      width: 100%;
      height: 100%;
      object-fit: contain;
  &__tags
    position: absolute;
    right: 0;
    top: 7px;
    display: flex;
    flex-direction: column;
    @media (max-width: max-extra-large)
      top: 3px;
    @media (max-width: max-medium)
      top: 5px;
      right: 2px;
  &__info
    width: 55%;
    padding: 11px 15px 8px 6px;
    text-align: left;
    @media (max-width: max-medium)
      width 100%
      padding: 0 10px 20px 10px
  &__date
    color: #768592
    margin-bottom: 2px;
    @media (max-width: max-extra-large)
      margin-bottom: 0;
    @media (max-width: max-medium)
      margin-bottom: 7px;
  &__title
    font-weight: bold;
    font-size: 18px;
    line-height: 145%;
    letter-spacing: 0.02em;
    height: calc(27px * 3);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    color #0C0033
    margin-bottom: 3px;
    @media (max-width: max-extra-large)
      font-size: 16.5px;
      max-height: 71px;
      margin-bottom: 7px;
    @media (max-width: max-medium)
      font-size: 15.5px;
      line-height: 140%;
      height: calc(27px * 4);
      -webkit-line-clamp: 4;
      max-height: 84px;
  &__desc
    color: #566069;
    height: calc(19px * 2);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    @media (max-width: max-extra-large)
      max-height: 34px;
    @media (max-width: max-medium)
      height: calc(19px * 3);
      -webkit-line-clamp: 3;
      max-height: 48px;

.advantage
  width: 18%;
  text-align: center;
  @media (max-width: max-medium)
    width: 100%;
    text-align: left;
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 15px;
  &__img
    height: 100px;
    @media (max-width: max-large)
      height: 72px;
    @media (max-width: max-medium)
      width: 60px;
      height: 54px;
    img
      max-height 100%
  &__text
    font-size: 12.75px;
    line-height: 150%;
    letter-spacing: 0.04em;
    padding: 5px 8px;
    @media (max-width: max-large)
      padding: 12px 3px;
      font-size: 12.5px;
      line-height: 135%;
    @media (max-width: max-medium)
      letter-spacing: 0.02em;
      padding: 0 0 0 21px;
      width: calc(100% - 60px);
      font-size: 12px;
      line-height: 130%;
      display: flex;
      align-items: center;

.brand-card
  width 350px !important
  margin 0 14px 33px
  background-color: white;
  @media (max-width: max-extra-large)
    width: 315px !important;
    margin: 0 10px 35px;
  @media (max-width: max-medium)
    width: 232px !important;
    margin: 0 14px 9px;
  &.\--comfort
    .brand-card__header
      border-radius: 60px 10px 0px 0px;
      @media (max-width: max-extra-large)
        border-radius: 60px 10px 0px 0px;
    .brand-card__content
      border-radius: 0 0 60px 10px;
  &.\--premium
    box-shadow: 0px 16px 24px rgba(215, 75, 72, 0.24);
    border-radius 30px
    @media (max-width: max-extra-large)
      box-shadow: 0px 4px 8px rgba(215, 75, 72, 0.44);
    .brand-card__header
      border-color accent-red
      background-color accent-red
      color white
      @media (max-width: max-extra-large)
        border-radius: 20px 20px 0px 0px;
      @media (max-width: max-medium)
        border-radius 30px 30px 0 0
    .brand-card__content
      border-color transparent
  &.\--standart
    .brand-card__header
      border-radius: 10px 60px 0 0;
    .brand-card__content
      border-radius: 0 0 10px 60px;
  &__header
    font-weight: 600;
    font-size: 20.25px;
    line-height: 150%;
    letter-spacing: 0.04em;
    padding: 16px 10px;
    color accent-dark
    background-color #DFE2E9;
    border: 4px solid #DFE2E9;
    border-radius: 30px 30px 0px 0px;
    @media (max-width: max-extra-large)
      font-size: 18px;
      padding: 12px 10px;
    @media (max-width: max-medium)
      font-size: 16.75px;
      line-height: 111%;
      border-radius: 30px 6px 0px 0px;
      padding: 10px;
  &__content
    padding: 21px 0 20px;
    border: 4px solid #dfe2e9;
    border-top: none;
    @media (max-width: max-extra-large)
      padding: 21px 0 23px;
    @media (max-width: max-medium)
      border-width 3px
      padding: 21px 0 17px;
      border-radius: 0 0 47px 10px;
  &__imgs
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 17px;
    @media (max-width: max-medium)
      margin-bottom: 13px;
    &-item
      width 50%
      height: 49px;
      @media (max-width: max-extra-large)
        height: 46px;
      @media (max-width: max-medium)
        height: 40px;

.new-card
  width 350px !important
  margin 0 14px 28px
  background-color: white;
  box-shadow: 0px 4px 8px rgba(8, 35, 48, 0.24);
  border-radius: 60px 10px;
  @media (max-width: max-extra-large)
    width: 315px !important;
    margin: 0 10px 14px;
  @media (max-width: max-medium)
    width: 232px !important;
    margin: 0 14px 9px;
  &__img
    padding: 15px 14px 0 16px;
    height: 228px;
    position relative
    @media (max-width: max-extra-large)
      padding: 13px 11px 0 11px;
      height: 206px;
    @media (max-width: max-medium)
      padding: 10px 11px 0 11px;
      height: 150px;
    img
      border-radius: 50px 5px 30px;
      overflow: hidden;
      width: 100%;
      height: 100%;
      object-fit: contain;
  &__labels
    position: absolute;
    right: 6px;
    top: 7px;
    display: flex;
    flex-direction: column;
  &__info
    padding: 5px 15px 25px;
    text-align: left;
    @media (max-width: max-medium)
      padding: 5px 10px 25px;
  &__date
    color: #768592
    margin-bottom: 2px;
    @media (max-width: max-medium)
      margin-bottom: 9px;
  &__title
    font-weight: bold;
    font-size: 18px;
    line-height: 145%;
    letter-spacing: 0.02em;
    height: calc(27px * 3);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    color #0C0033
    margin-bottom: 17px;
    @media (max-width: max-extra-large)
      font-size: 16.5px;
      max-height: 71px;
      margin-bottom: 14px;
    @media (max-width: max-medium)
      font-size: 15.5px;
      line-height: 140%;
      height: calc(27px * 4);
      -webkit-line-clamp: 4;
      max-height: 84px;
      margin-bottom: 13px;
  &__tags
    .btn
      margin-right: 8px;
      margin-bottom: 5px;

.review-card
  width 350px !important
  margin 0 14px
  text-align: right;
  @media (max-width: max-extra-large)
    width: 315px !important;
    margin: 0 10px 14px;
  @media (max-width: max-medium)
    width: 232px !important;
    margin: 0 14px 9px;
  &__text
    background-color: white;
    border: 0.5px solid #FFFFFF;
    border-radius: 30px 5px;
    padding: 30px;
    font-size: 12.75px;
    line-height: 150%;
    text-align: center;
    letter-spacing: 0.04em;
    color: #0C0033;
    @media (max-width: max-extra-large)
      font-size: 12.5px;
      line-height: 135%;
      padding: 32px 12px;
    @media (max-width: max-medium)
      font-size: 12px;
      line-height: 130%;
      padding: 15px;
  &__author
    font-weight: 600;
    font-size: 14.5px;
    line-height: 150%;
    letter-spacing: 0.02em;
    color: #768592;
    margin-top: 4px;
    @media (max-width: max-extra-large)
      font-size: 14px;
    @media (max-width: max-medium)
      font-size: 13px;

.type-card
  margin 0 15px 26px
  width: 255px;
  background-color white
  border-radius: 25px 5px;
  box-shadow: 0px 4px 8px rgba(8, 35, 48, 0.24);
  @media (max-width: max-extra-large)
    margin: 0 5px 25px;
    width: 220px;
  @media (max-width: max-medium)
    width: 100%;
    border-radius: 0px 0px 30px 0px;
    margin: 0 0 17px;
    display: flex;
    flex-wrap: wrap;
    justify-content space-between
    position: relative;
  &:hover
    position: relative;
    z-index: 10;
    @media (min-width: max-medium)
      border-radius: 25px 5px 0 0;
    .type-card__title
      color accent-dark
      text-decoration-color: #4a4a4a;
    .type-card__main-sect-btm
      opacity 1
      pointer-events all
      visibility visible
      transform: translateY(0);
      box-shadow: 0px 4px 8px rgba(8, 35, 48, 0.24);
      @media (max-width: max-medium)
        box-shadow none
    .type-card__main-controls
      @media (min-width: max-medium)
        border-radius: 0
  &.\--new
    box-shadow: 0px 4px 8px rgba(0, 204, 155, 0.24);
    &:hover
      .type-card__main-sect-btm
        box-shadow: 0px 4px 8px rgba(0, 204, 155, 0.24);
        @media (max-width: max-medium)
          box-shadow none
    .type-card__label
      background-color accent-green
      text-shadow: -1px 1px 0px #26A69A;
      box-shadow: 0px 2px 0px #26A69A;
  &.\--best-price
    box-shadow: 0px 4px 8px rgba(126, 87, 194, 0.24);
    &:hover
      .type-card__main-sect-btm
        box-shadow: 0px 4px 8px rgba(126, 87, 194, 0.24);
        @media (max-width: max-medium)
          box-shadow none
    .type-card__label
      background-color #7E57C2
      text-shadow: -1px 1px 0px #673AB7;
      box-shadow: 0px 2px 0px #673AB7;
  &.\--bestseller
    box-shadow: 0px 4px 8px rgba(255, 171, 0, 0.24);
    &:hover
      .type-card__main-sect-btm
        box-shadow: 0px 4px 8px rgba(255, 171, 0, 0.24);
        @media (max-width: max-medium)
          box-shadow none
    .type-card__label
      background-color #FFAB00
      text-shadow: -1px 1px 0px #FF8F00;
      box-shadow: 0px 2px 0px #FF8F00;
  &.\--simple-banner
    box-shadow: none;
    overflow: hidden;
    border-radius: 25px 5px;
    &:hover
      border-radius: 25px 5px;
    .type-card__img
      position relative
      height: 385px;
      border-bottom: none;
      background-position: center;
      background-size: cover;
      @media (max-width: max-extra-large)
        height: 347px;
      @media (max-width: max-medium)
        height: 160px;
        width 100%
  &.\--model
    .type-card__main-controls
      margin-top: 12px;
      @media (max-width: max-medium)
        margin-top: 3px;
        padding: 0 10px 8px;
    .type-card__main-controls-block
      @media (max-width: max-extra-large)
        padding-top: 3px;
      @media (max-width: max-medium)
        padding-top: 0
      &:first-of-type
        padding-top: 0;
        align-items: flex-start;
        .type-card__price
          margin-bottom: 3px
    .type-card__price-tip
      @media (max-width: max-medium)
        font-size: 11px;
        line-height: 130%;
  &__img
    display block
    border-bottom: 2px solid #DFE2E9;
    height: 192px;
    position relative
    text-decoration none
    overflow hidden
    @media (max-width: max-extra-large)
      height 166px
    @media (max-width: max-medium)
      height: auto;
      width: 116px;
      border-bottom: none;
      overflow visible
      position static
  &__image
    position: absolute;
    top: 30px;
    width: 100%;
    z-index: 1;
    @media (max-width: max-medium)
      position: static;
      margin-top: -20px;
      max-height: 157px;
  &__labels
    display: flex;
    flex-wrap: wrap;
    justify-content space-between
    position: relative;
    z-index: 5;
    @media (max-width: max-medium)
      position static
    &-left
      width: 55%;
      display: inline-block;
      @media (max-width: max-medium)
        width: 100%
        max-width: 105px;
    &-right
      width 38%
      display: inline-block;
      text-align right
      @media (max-width: max-extra-large)
        width 44%
      @media (max-width: max-medium)
        position: absolute;
        right: 0;
        z-index: 7;
        width: auto;
        left: auto;
  &__brand
    display: block;
    margin: 15px 0 6px;
    @media (max-width: max-extra-large)
      margin: 10px 0 6px;
    @media (max-width: max-medium)
      margin: 5px 0 2px;
    img
      width: 100%;
      height: 100%;
      object-fit: contain;
  &__type-label
    width: 30px;
    height: 30px;
    display: inline-block;
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    margin-left: 18px;
    @media (max-width: max-extra-large)
      margin-left: 5px;
      width: 22px;
      height: 22px;
    &.\--sun
      background-image: url(/img/svg/sun.svg)
  &__label
    width: 96px;
    height: 36px;
    color white
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5px;
    border-radius: 0px 5px 0px 25px;
    text-align center
    font-weight bold
    font-size: 12.75px;
    line-height: 115%;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    @media (max-width: max-medium)
      border-radius: 0px 2px 0px 15px;
      width: auto;
      height: 18px;
      padding: 0 6px;
      font-weight: 600;
      font-size: 11px;
      line-height: 115%;
  &__main
    padding: 10px 0 0
    position relative
    z-index 6
    border-radius: 0 0 25px 5px;
    background-color white
    @media (max-width: max-extra-large)
      padding: 8px 0 0;
    @media (max-width: max-medium)
      padding: 20px 0 0;
      width: calc(100% - 124px);
    &-sect
      @media (max-width: max-medium)
        padding-right: 10px;
      &-top
        padding: 0 15px;
        position: relative;
        z-index: 1;
        background-color: white;
        @media (max-width: max-extra-large)
          padding: 0 10px
        @media (max-width: max-medium)
          padding: 0
      &-btm
        opacity 0
        pointer-events none
        visibility hidden
        padding: 13px 19px;
        position: absolute;
        left: 0;
        right: 0;
        top: 100%;
        z-index: 1
        background-color: #ECEFF1;
        border-radius: 0px 0px 25px 5px;
        transform: translateY(-50%);
        transition all .3s ease-in-out
        @media (max-width: max-large)
          display none
        @media (max-width: max-medium)
          display: block;
          transform: translateY(0);
          background-color: white;
          border-radius: 0;
          padding: 0;
          opacity: 1;
          pointer-events: all;
          visibility: visible;
          position: static;
        &-further
          @media (max-width: max-medium)
            display none
    &-controls
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      padding: 0 15px 17px;
      position: relative;
      z-index: 1;
      background-color: white;
      border-radius: 0 0 25px 5px;
      @media (max-width: max-extra-large)
        padding: 0 10px 13px;
      @media (max-width: max-medium)
        padding: 4px 6px 5px 8px;
        background-color: #EEEEEE;
        margin: 5px 5px 5px 0;
      &-block
        display: flex;
        flex-direction: column;
        justify-content: inherit;
        align-items: flex-end;
        @media (max-width: max-medium)
          justify-content: center;
        &:first-of-type
          padding-top: 4px;
          width: 43%;
          @media (max-width: max-extra-large)
            padding-top: 0;
          @media (max-width: max-medium)
            width: 90px
        &:last-of-type
          width: 53%;
          @media (max-width: max-medium)
            width: 32%;
        .btn
          @media (max-width: max-extra-large)
            min-width: 104px;
            font-size: 12px;
            height 40px
          @media (max-width: max-medium)
            display none
  &__title
    font-weight: 600;
    font-size: 16px;
    letter-spacing: 0.02em;
    color accent-dark
    line-height: 24px;
    height: calc(24px * 2);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-decoration: underline;
    text-decoration-color: transparent;
    transition text-decoration-color .3s ease-in-out
    @media (max-width: max-extra-large)
      font-size: 15px;
      line-height: 22px
      height: calc(22px * 2);
    @media (max-width: max-medium)
      font-size: 12px;
      line-height: 16px
      height: calc(16px * 2);
  &__info
    &-type
      margin: 4px 0 10px;
      font-size: 16px;
      line-height: 150%;
      letter-spacing: 0.02em;
      color: #566069;
      @media (max-width: max-extra-large)
        font-size 15px
      @media (max-width: max-medium)
        border: 2px solid #ECEFF1;
        border-radius: 3px;
        display: inline-block;
        padding: 1px 9px;
        font-size: 13px;
        line-height: 135%;
        margin: 4px 0 7px;
        color: #566069;
    &-icons
      display none
    &-modal
      opacity 0
      pointer-events none
      visibility hidden
      width: 270px;
      box-shadow: 0px 24px 32px rgba(8, 35, 48, 0.24);
      background-color white
      border: 3px solid #C9CFDA;
      border-radius: 60px 10px;
      position: absolute;
      text-align center
      left: 101%;
      z-index: 4;
      padding: 21px 25px;
      transition all .3s ease-in-out
      @media (max-width: max-large)
        display none
      &-title
        font-weight: 600;
        font-size: 16px;
        line-height: 150%;
        letter-spacing: 0.02em;
        margin-bottom: 15px;
      &-img
        margin-bottom: 4px;
        img
          max-width: 100%;
      &-text
        text-align left
        margin-bottom: 5px;
        &-label
          font-weight: 600;
          font-size: 16px;
          line-height: 150%;
          letter-spacing: 0.02em;
        &-value
          font-size: 12.75px;
          line-height: 150%;
          letter-spacing: 0.04em;
  &__further-info
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    margin-bottom: 3px;
    @media (max-width: max-medium)
      display none
    &:nth-of-type(1),
    &:nth-of-type(2)
      @media (max-width: max-medium)
        display flex
    &-label
      font-size: 11.75px;
      line-height: 135%;
      letter-spacing: 0.04em;
      color: #666666;
      width: 52%;
      @media (max-width: max-medium)
        font-size: 10px;
        line-height: 115%;
        width: 44%;
    &-value
      font-weight: 600;
      font-size: 12.75px;
      line-height: 150%;
      letter-spacing: 0.04em;
      color accent-dark
      width: 48%;
      @media (max-width: max-medium)
        font-size: 12px;
        line-height: 130%;
        letter-spacing: 0.02em;
        width: 56%;
  &__price-tip
    font-size: 12.75px;
    line-height: 150%;
    letter-spacing: 0.04em;
    color: #566069;
  &__price
    font-weight: bold;
    font-size: 22px;
    line-height: 22px;
    color accent-red
    letter-spacing: 0.04em;
    white-space nowrap
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    margin-bottom: 9px;
    @media (max-width: max-extra-large)
      font-size: 20px;
      line-height: 150%;
      margin-bottom: 1px;
    @media (max-width: max-medium)
      order 2
      font-size: 17px;
      margin-bottom 0
    &.\--old
      font-size: 12.75px;
      line-height: 19px
      color: #566069;
      position relative
      display: inline-flex;
      margin-bottom: 3px;
      @media (max-width: max-extra-large)
        margin-bottom: 9px;
      @media (max-width: max-medium)
        margin-bottom: 0
        order 1
        font-size: 10px;
        line-height: 150%
      &:before
        content ''
        background-color accent-red
        position: absolute;
        z-index: 1;
        height: 1px;
        width: 100%;
        transform: rotateZ(8deg) translateY(9px);
      span
        font-size: 11.75px;
        line-height: 13px
        margin-left: 2px;
        @media (max-width: max-medium)
          line-height: 14px;
          font-size: 9px;
    span
      font-weight: normal;
      font-size: 11.75px;
      line-height: 18px;
      letter-spacing: 0.04em;
      @media (max-width: max-medium)
        line-height: 17px;
        font-size: 10px;
  &__profit
    font-size: 11.75px;
    line-height: 135%;
    letter-spacing: 0.04em;
    color: #666666
    text-align: left;
    width: 100%;
    @media (max-width: max-medium)
      font-size: 11px;
      line-height: 130%;
      order 3
      text-align right
    span
      font-weight: 600;
      font-size: 14.5px;
