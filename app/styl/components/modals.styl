@import "nib"
@import "vars"
@import "mixins"

.modal
  display none
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 35px 0;
  align-items: center;
  //align-items: baseline;
  flex-wrap: wrap;
  justify-content: center;
  overflow auto
  &.\--open
    display: flex;
  &.\--style-1
    .modal__content
      width: 370px;
      @media (max-width: max-medium)
        width: 270px;
    .modal__title
      text-align: center;
      font-weight: 600;
      font-size: 20.25px;
      line-height: 150%;
      @media (max-width: max-medium)
        font-size: 16.75px;
        line-height: 111%;
    form
      margin: 19px 0 0;
      @media (max-width: max-medium)
        margin: 21px 0 0;
  &.\--style-2
    .modal__content
      width: 1110px;
      @media (max-width: 1139px)
        width 690px
      @media (max-width: max-medium)
        width: 370px;
        padding: 20px 30px;
      @media (max-width: max-sm)
        width: 290px;
        padding: 20px 15px;
  &.\--style-3
    .modal__content
      width: 571px;
      @media (max-width: max-medium)
        width: 370px;
        padding: 20px 30px;
      @media (max-width: max-sm)
        width: 270px;
        padding: 20px 15px;
    .form-sect
      margin-bottom 0
  &.\--style-4
    .modal__content
      width: 730px;
      @media (max-width: max-medium)
        width: 290px;
  &__hider
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    cursor: pointer;
    background-color: rgba(0, 0, 0, 0.37);
  &__content
    position: relative;
    z-index: 2;
    background-color: white;
    box-shadow: 0px 24px 32px rgba(8, 35, 48, 0.24);
    border-radius: 60px 10px;
    padding 30px
    @media (max-width: max-extra-large)
      border-radius: 40px 5px;
    @media (max-width: max-medium)
      padding: 20px 15px;
  &__close
    position: absolute;
    right: 0;
    top: -30px;
    z-index: 1;
    color: white;
    font-size: 28px;
    display: block;
    width: 30px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    cursor: pointer;
    transition color .3s ease-in-out
    &:hover
      color accent-red
  &__title
    font-weight: 600;
    font-size: 20.25px;
    line-height: 150%;
    text-align: center;
    margin: 5px 0 6px;
    @media (max-width: max-medium)
      font-size: 18px;
      margin: 5px 0 8px;
    @media (max-width: max-sm)
      font-size: 16.75px;
      line-height: 111%;
      margin: 5px 0 10px;
  &__text
    font-size: 12.75px;
    line-height: 150%;
    text-align: center;
    letter-spacing: 0.04em;
    color: #566069;
    margin-bottom: 10px;
    @media (max-width: max-medium)
      font-size: 12.5px;
      line-height: 135%;
      margin-bottom: 14px;
    @media (max-width: max-sm)
      font-size: 12px;
      line-height: 130%;
      margin-bottom: 14px;
  &__btn
    width: 100%;
    text-align: center;
    margin: 8px 0 0;
  &__icon-text
    display flex
    flex-wrap wrap
    margin-top: 17px;
    align-items: baseline;
    &-icon
      font-family: "fontello";
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      width 20px
      height 20px
      text-align: center;
      color: white;
      border-radius: 50%;
      font-size: 13px;
      background-color accent-green
      &:before
        content: '\e806';
    &-text
      font-size: 14.5px;
      line-height: 150%;
      letter-spacing: 0.02em;
      width: calc(100% - 20px);
      padding-left: 10px;


.compare-list
  display none
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 35px 0;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
  overflow auto
  @media (max-width: max-sm)
    padding: 35px 15px;
  &.\--open
    display: flex;
  &__hider
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    cursor: pointer;
    background-color: rgba(0, 0, 0, 0.37);
  &__content
    width: 100%;
    max-width: 440px;
    position: relative;
    z-index: 2;
    background-color: white;
    box-shadow: 0px 24px 32px rgba(8, 35, 48, 0.24);
    border-radius: 26px;
    padding: 20px 30px 17px
  &__close
    position: absolute;
    right: 20px;
    top: 20px;
    z-index: 1;
    font-size: 28px;
    display: block;
    width: 35px;
    height: 35px;
    line-height: 31px;
    text-align center
    border-radius: 50%;
    cursor: pointer;
    border: 1px solid #d8d8d8;
    transition color .3s ease-in-out
    &:hover
      color accent-red
  &__title
    font-weight: 600;
    font-size: 22px;
    line-height: 33px;
    margin-bottom: 30px;
    @media (max-width: max-sm)
      font-size: 18px;
  &__links
    normalize_list()
    font-weight: 600;
    font-size: 16px;
  &__item
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 0;
    &:nth-of-type(2)
      border-top: 1px solid #EFF0F6;
  &__link
    color: #007AFF;
    span
      color: initial;
      font-weight: 500;
  &__remove
    font-weight: bold;
    font-size: 24px;
    line-height: 14px;
    display: inline-block;
    cursor pointer
    transition color .3s ease-in-out
    &:hover
      color accent-red
  &__empty
    display none
    margin-bottom: 15px;
