    display: inline-block;
    margin-top: 25px;
    padding: 21px 27px 8px
    min-width: 50%;
    @media (max-width: max-large)
      margin-top: 11px;
      border-radius: 30px 10px;
      padding: 18px 22px 0
      width: 100%;
    @media (max-width: max-medium)
      padding: 7px 22px 8px;
      margin-top: 17px;
      border-radius: 30px 5px;
      width 100%
    &-label
      font-size: 12.75px;
      line-height: 150%;
      letter-spacing: 0.04em;
      color: #566069;
      margin-bottom: 4px;
      @media (max-width: max-large)
        font-size: 12.5px;
        line-height: 135%;
    &-value
      font-weight: 600;
      font-size: 14.5px;
      line-height: 150%;
      letter-spacing: 0.02em;
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      margin-bottom: 14px;
      @media (max-width: max-large)
        margin-bottom: 22px;
      @media (max-width: max-medium)
        font-size: 13px;
        line-height: 135%;
      &.\--location
        position relative
        padding-left: 22px;
        svg
          @media (max-width: max-large)
            position: absolute;
            left: 0;
            top: 1px;
            margin-right: 0;
      svg
        margin-right: 4px;
    &-date,
    &-time
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    &-date
      margin-right: 53px;


