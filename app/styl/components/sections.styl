  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  &__date
    &:first-of-type
      width: 32%;
    &:last-of-type
      width 65%
    &.\--hidden
      display none
  &__label
    font-size: 16px;
    line-height: 150%;
    letter-spacing: 0.02em;
    color: #768592;
    margin-left: 29px;
    margin-bottom: 19px;
  &__picker
    border: 3px solid #DFE2E9;
    border-radius: 60px 10px;
    padding: 15px 10px;
    overflow hidden

.timepicker
  display: flex;
  flex-wrap: wrap;
  padding: 2px 9px 8px;
  justify-content: space-between;
  @media (max-width: max-large)
    padding: 0;
  &__day
    display: flex;
    flex-wrap: wrap;
    width 32%
    flex-direction column
    @media (max-width: max-large)
      width: 100%;
    &-name
      font-weight: 600;
      font-size: 18px;
      line-height: 145%;
      letter-spacing: 0.02em;
      text-align: center;
      margin-bottom: 6px;
    &-times
      display: flex;
      flex-wrap: wrap;
      justify-content space-between
      @media (max-width: max-large)
        justify-content: flex-start;
    &-time
      width 29%
      margin: 3px;
      border-radius: 3px;
      background-color: #ECEFF1;
      font-size: 14px;
      line-height: 150%;
      letter-spacing: 0.02em;
      padding: 8px 5px;
      text-align: center;
      cursor pointer
      @media (max-width: max-large)
        width: calc(100% / 4 - 6px);
      &.\--disabled
        opacity: .3;
        pointer-events: none;
      &.\--checked
        background-color accent-red
        color white

.selected-center
  background-color #ECEFF1
  font-size: 16px;
  line-height: 150%;
  letter-spacing: 0.02em;
  padding: 9px 0;
  &.\--hidden
    display none
  &__content
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  &__label
    font-weight bold
    margin-right: 33px;
  &__center,
  &__date,
  &__time
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    margin-right: 42px;
    svg
      margin-right: 6px;

.record-order
  background-image: url(/img/common/bg-2.png);
  background-repeat: repeat;
  padding: 30px 0;
  @media (max-width: max-large)
    background-image none
    padding: 42px 0 0
  @media (max-width: max-medium)
    padding: 30px 0;
  &.\--hidden
    display none
  &__content
    border: 3px solid #DFE2E9;
    border-radius: 60px 10px;
    background-color white
    padding: 28px 28px 0
    @media (max-width: max-large)
      border: none;
      border-radius: 0;
      padding: 0;
  &__title
    font-weight: 600;
    font-size: 20.25px;
    line-height: 150%;
    letter-spacing: 0.04em;
    margin-bottom: 6px;
    -webkit-appearance: none;
    background-color: transparent;
    border: none;
    outline: 0;
    cursor: pointer;
    @media (max-width: max-large)
      font-size: 21.25px;
      line-height: 110%;
      text-align: center;
      margin-bottom: 11px;
    @media (max-width: max-medium)
      font-size: 20px;
      line-height: 120%;
      margin-bottom: 12px;
  &__storage
    border: 3px solid #ECEFF1;
    border-radius: 40px 5px;
    width: 100%;
    margin: 9px 0 0;
    padding: 25px 17px 19px;
    display: flex;
    flex-wrap: wrap;
    @media (max-width: max-large)
      margin: 10px 0 0;
      padding: 11px 17px 13px;
      border-bottom: none;
      border-radius: 40px 5px 0 0;
    @media (max-width: max-medium)
      margin: 13px 0 0;
      padding: 15px 13px 19px;
    &-label
      font-weight: 600;
      font-size: 16px;
      line-height: 150%;
      letter-spacing: 0.02em;
      width: 23%;
      padding-right: 20px;
      @media (max-width: max-extra-large)
        font-size: 15px;
        line-height: 150%;
        padding-right: 0;
      @media (max-width: max-large)
        width: 100%;
        margin-bottom: 18px;
      @media (max-width: max-medium)
        text-align: center;
        margin-bottom: 0
    &-info
      width: 77%;
      display: flex;
      flex-wrap: wrap;
      @media (max-width: max-large)
        width: 100%;
        padding-right: 0;
        margin: 0;
      @media (max-width: max-medium)
        text-align: center;
    &-radio
      padding-right: 29px;
      @media (max-width: max-medium)
        padding-right: 0
        width 100%
        margin-top: 21px;
      input[type="radio"]
        //display block
        &:checked
          & ~ label
            &:after
              opacity 1
            .record-order__storage-radio-text
              span
                display block
            .field
              display block
      &-label
        position relative
        padding-left: 28px;
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        @media (max-width: max-large)
          font-size: 12.5px;
          line-height: 135%;
        @media (max-width: max-medium)
          font-size: 12px;
          line-height: 130%;
          text-align: left;
          padding-left: 28px;
        &:before,
        &:after
          content ''
          display: block;
          border-radius: 50%;
          position: absolute;
        &:before
          width: 17px;
          height: 17px;
          border: 2px solid accent-red
          left: 0;
          top 0
          @media (max-width: max-large)
            top: -4px;
          @media (max-width: max-medium)
            top: -3px;
        &:after
          width: 13px;
          height: 13px;
          background-color: accent-red
          left: 4px;
          top: 4px;
          opacity 0
          transition opacity .3s ease-in-out
          @media (max-width: max-large)
            top: 0px;
          @media (max-width: max-medium)
            top: 1px;
        .field
          width: 219px;
          margin-top: -11px;
          display none
          @media (max-width: max-extra-large)
            width: 179px;
          @media (max-width: max-large)
            width: 200px;
            margin-top: -15px;
          @media (max-width: max-medium)
            width: 100%;
            margin-top: 8px;
      &-text
        width: 200px;
        display: block;
        padding-right: 5px;
        @media (max-width: max-large)
          font-size: 12.5px;
          line-height: 135%;
          width 185px
        @media (max-width: max-medium)
          width: 100%;
          padding-right: 0;
        span
          font-weight: 600;
          font-size: 11.75px;
          line-height: 135%;
          letter-spacing: 0.04em;
          color: #B0BAC9;
          margin-top: 10px;
          display: none
          @media (max-width: max-extra-large)
            margin-top: 4px;
            font-size: 11px;
            line-height: 115%;
    &-tip
      background-color #ECEFF1
      border-radius: 4px;
      padding: 10px;
      font-size: 11.75px;
      line-height: 135%;
      letter-spacing: 0.04em;
      margin-top: 17px;
      display: flex;
      align-items: center;
      flex-wrap: wrap;
      @media (max-width: max-extra-large)
        font-size: 11.3px;
        line-height: 130%;
        margin-top: 9px;
      @media (max-width: max-medium)
        font-size: 11.54px;
        text-align left
        position relative
        padding-left: 27px;
      &.\--hidden
        display none
      svg
        margin-right: 5px;
        @media (max-width: max-medium)
          margin-right 0
          top: 9px;
          left: 9px;
          position: absolute;
    &-footer
      width 100%
      display flex
      flex-wrap wrap
      justify-content space-between
      margin-top: 15px;
      align-items: flex-start;
      @media (max-width: max-large)
        margin-top: 0;
        border: 3px solid #ECEFF1;
        border-top: 0;
        border-radius: 0 0 40px 5px;
        padding: 0 17px 16px;
      &.\--comment-open
        align-items: flex-end;
        .record-order__storage-footer-comment-title
          &:before
            content 'Скрыть комментарий'
        .record-order__storage-footer-comment-sect
          display block
      &-comment
        width: 48%;
        @media (max-width: max-medium)
          width: 100%;
          text-align: center;
        &-title
          font-weight: bold;
          font-size: 12.75px;
          line-height: 115%;
          letter-spacing: 0.02em;
          text-transform: uppercase;
          color accent-red
          -webkit-appearance: none
          background-color transparent
          border none
          outline 0
          cursor pointer
          @media (max-width: max-medium)
            font-size: 12px;
            line-height: 130%;
          &:before
            content 'Добавить комментарий к заказу'
        &-sect
          display none
          margin-top: 6px;
          @media (max-width: max-medium)
            margin-top: 12px;
          .field
            margin-bottom 0
      &-btn
        width: 24%;
        @media (max-width: max-large)
          width: 30%;
        @media (max-width: max-medium)
          width: 100%;
          margin-top: 20px;
          text-align center
        .btn
          @media (max-width: max-large)
            height: 40px;
          @media (max-width: max-medium)
            max-width 200px

.record-success
  background-image: url(/img/common/bg-2.png);
  background-repeat: repeat;
  padding: 31px 0;
  display none
  @media (max-width: max-large)
    padding: 23px 0;
  @media (max-width: max-medium)
    background-image none
    padding: 12px 0;
  &__msg
    font-weight: bold;
    font-size: 18px;
    line-height: 145%;
    letter-spacing: 0.02em;
    position: relative;
    padding-left: 33px;
    @media (max-width: max-large)
